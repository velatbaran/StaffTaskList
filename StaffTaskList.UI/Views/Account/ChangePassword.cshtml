@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifremi Değiştir";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword" class="control-label"></label>
                <input type="password" asp-for="RePassword" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Değiştir" class="btn btn-primary" title="Değiştir"><i class="fa-solid fa-floppy-disk"></i> Değiştir</button>
            </div>
        </form>
    </div>
</div>