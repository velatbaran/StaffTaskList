@model LoginViewModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Giriş";
}

<style>
    .auth .brand-logo img{
        width: 500px;
    }
</style>

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo text-center">
                <img src="~/images/makinaikmal.png" height="300" />
            </div>
            <div class="text-center">
                <h2>Makina İmalat ve Donatım Şube Müdürlüğü</h2>
                <h3>Personel Görev Yönetimi</h3>
                <h4>Giriş Sayfasına Hoşgeldiniz</h4>
            </div>
            <form class="pt-3" method="post" asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                <div class="mt-3">
                    <button type="submit" value="Giriş Yap" class="btn btn-outline-success btn-rounded" title="Ekle"><i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted">
                            <input type="checkbox" class="form-check-input">
                            Beni Hatırla
                        </label>
                    </div>
                    @* <a href="/Account/ForgetPassword" class="auth-link text-black">Şifremi Unuttum</a> *@
                    <a href="/sifremiunuttum" class="auth-link text-black">Şifremi Unuttum</a>
                </div>
            </form>
        </div>
    </div>
</div>