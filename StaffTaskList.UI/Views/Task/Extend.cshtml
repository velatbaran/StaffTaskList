@model AddTaskViewModel

@{
    ViewData["Title"] = "Görev Uzatma";
}

<form asp-action="Extend">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <div class="select2-wrapper">
                    <select asp-for="EmployeeId" readonly
                            class="form-control select2"
                            asp-items="ViewBag.Employee">
                        <option></option>
                    </select>
                </div>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceGone" class="control-label"></label>
                <input asp-for="PlaceGone" class="form-control" readonly />
                <span asp-validation-for="PlaceGone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label"></label>
                <input type="date" asp-for="ArrivalDate" class="form-control" readonly />
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDepartureDate" class="control-label"></label>
                <input type="date" asp-for="NewDepartureDate" class="form-control" />
                <span asp-validation-for="NewDepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="3" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Uzat" class="btn btn-outline-success btn-rounded" title="Uzat"><i class="fa-solid fa-wrench"></i> Uzat</button>&nbsp;&nbsp;&nbsp;
                <a href="/gorevler" class="btn btn-outline-secondary btn-rounded" title="İptal"><i class="fa-solid fa-ban"></i> İptal</a>
            </div>
        </div>
    </div>
</form>
