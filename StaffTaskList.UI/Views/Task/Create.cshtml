@model AddTaskViewModel

@{
    ViewData["Title"] = "Görev Ekle";
}

<style>
    /* Select2 Bootstrap fix */
    .select2-container {
        width: 100% !important;
    }

    .select2-container--default .select2-selection--single {
        height: 38px; /* Bootstrap input yüksekliği */
        padding: 4px 8px;
        font-size:16px;
        font-weight: 800;
    }

    .select2-container--default .select2-selection__rendered {
        line-height: 28px;
    }

    .select2-container--default .select2-selection__arrow {
        height: 36px;
    }

</style>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <div class="select2-wrapper">
                    <select asp-for="EmployeeId"
                            class="form-control select2"
                            asp-items="ViewBag.Employee">
                        <option></option>
                    </select>
                </div>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceGone" class="control-label"></label>
                <input asp-for="PlaceGone" class="form-control" />
                <span asp-validation-for="PlaceGone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalDate" class="control-label"></label>
                <input type="date" asp-for="ArrivalDate" class="form-control" />
                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDepartureDate" class="control-label"></label>
                <input type="date" asp-for="NewDepartureDate" class="form-control" />
                <span asp-validation-for="NewDepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="3" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Ekle" class="btn btn-outline-success btn-rounded" title="Ekle"><i class="fa-solid fa-floppy-disk"></i> Ekle</button>&nbsp;&nbsp;&nbsp;
                <a href="/gorevler" class="btn btn-outline-secondary btn-rounded" title="İptal"><i class="fa-solid fa-ban"></i> İptal</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(function () {
            $('.select2').select2({
                placeholder: "Personel ara...",
                allowClear: true,
                width: '100%',
                dropdownParent: $('.select2-wrapper')
            });
        });
    </script>
}

